<h3>The articles list</h3>

<% @articles.each do |article|%>
    <h4><%= article.title%></h4>
    <p><%= article.text%></p>
    <p><%=  link_to 'Show', article_path(article)%></p>
    <p><%=  link_to 'Edit', edit_article_path(article)%></p>
    <p><%= button_to 'Delete',  article_path(article),  data:{turbo: false}, method: :delete%></p>
    <hr/>
    
<% end %>